#!/bin/bash

# Location of the manage_my_process script
SCRIPT_PATH="/path/to/manage_my_process"

# Location of the PID file
PID_FILE="/var/run/my_process.pid"

# Function to start the manage_my_process script
start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running. Use 'restart' or 'stop'."
        exit 1
    fi

    $SCRIPT_PATH &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

# Function to stop the manage_my_process script
stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        exit 1
    fi

    pid=$(cat "$PID_FILE")
    kill $pid
    rm "$PID_FILE"
    echo "manage_my_process stopped"
}

# Function to restart the manage_my_process script
restart() {
    stop
    start
    echo "manage_my_process restarted"
}

# Check for the correct number of arguments
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 {start|stop|restart}"
    exit 1
fi

# Check the argument and call the appropriate function
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
